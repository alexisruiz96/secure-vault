{
  "deploy": {
    "delete": false,
    "dest": "DESTINATION",
    "exclude": [
      "dist",
      "node_modules",
      ".git",
      "static/upload",
      "config/default.json"
    ],
    "src": "."
  },
  "commands": {
    "docker": {
      "build": "docker build -f ./config/docker/Dockerfile --tag kretes:login_form",
      "start": "docker run -p 5544 --name login_form kretes:login_form",
      "port": "docker inspect --format='{{(index (index .NetworkSettings.Ports \"5544/tcp\") 0).HostPort}}' login_form"
    }
  }
}
